<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wowo_detail_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="3sp"
        android:text="在下是妹纸，做了有半年的晚间档节目了。不知道现在大家晚间听电台的人多不多。有什么想问的呢？"
        android:textSize="15sp" />

    <include layout="@layout/divider_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checkedButton="@+id/radio_comment_all"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_comment_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="14sp"
                android:textColor="@color/like_color_selector"
                android:text="全部"/>

            <RadioButton
                android:id="@+id/radio_comment_lz_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:textSize="14sp"
                android:textColor="@color/like_color_selector"
                android:text="只看楼主"/>

            </RadioGroup>

    </RelativeLayout>

    <include layout="@layout/divider_view" />

</LinearLayout>